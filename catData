#!/bin/bash

WD=$(pwd)
DATA_DIR="${WD}/donnÃ©es"
OUT_DATA="${WD}/donnees.csv"

FILES=$(find "$DATA_DIR" -type f)

>"${OUT_DATA}"

for file in $FILES
do

    cat "$file" | awk -v fileName=$(basename "$file" .csv) ' {
        if ($0 != "") {
            print gensub(/([^,]*,)(.*)/, "\\1"fileName",\\2", "g", $0)
        }
    } '$'\n' >> "${OUT_DATA}"

done

cat "${OUT_DATA}" | awk '
BEGIN { i=1 }
{
    print i","$0
    i++
} ' > "${OUT_DATA}.tmp"

cat "${OUT_DATA}.tmp" > "${OUT_DATA}"
rm "${OUT_DATA}.tmp"

